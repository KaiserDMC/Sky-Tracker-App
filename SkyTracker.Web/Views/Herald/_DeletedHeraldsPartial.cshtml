@model IEnumerable<HeraldAllViewModel>

<button id="goBackToHeralds" class="btn btn-secondary">Go Back to Heralds</button>

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th>Date of Occurrence</th>
            <th>Type</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OccurrenceId</td>
                <td>@item.TypeOccurence</td>
                <td>@item.Details</td>
            </tr>
        }
    </tbody>
</table>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>
    // Handle the click event of the "Go Back to Heralds" button
    $(document).ready(function () {
        $('#goBackToHeralds').click(function () {
            // Load the normal "Heralds" partial view
            loadPartialViewOnClick('@Url.Action("HeraldsPartial", "AdminPanel", new {area = "Admin"})');
        });
    });
</script>