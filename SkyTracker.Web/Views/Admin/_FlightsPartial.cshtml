@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;
@model X.PagedList.IPagedList<FlightAllViewModel>

<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<p>
    <a href="@Url.Action("AddFlight", "Admin")" class="btn btn-primary">Add Flight</a>
    <button id="deleteSelected" class="btn btn-danger">Delete Selected</button>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Flight Id</th>
            <th>Registration</th>
            <th>Equipment</th>
            <th>Callsign</th>
            <th>Departure Airport</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model)
        {
            <tr id="row-@item.FlightId">
                <td>
                    <input type="checkbox" name="selectedRows" value="@item.FlightId" />
                </td>
                <td>
                    <a href="@Url.Action("EditFlight", "Admin", new { flightId = item.FlightId })">@item.FlightId</a>
                </td>
                <td>@item.Registration</td>
                <td>@item.Equipment</td>
                <td>@item.Callsign</td>
                <td>@item.DepartureId</td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">

        @Html.PagedListPager(Model, page => {
        if (page == 1)
        return Url.Action("FlightsPartial");
        else
        return Url.Action("FlightsPartial", new { page });
        }, new PagedListRenderOptions {
        DisplayLinkToFirstPage = PagedListDisplayMode.IfNeeded,
        ContainerDivClasses = new[] { "pagination" },
        LiElementClasses = new[] { "page-item" },
        PageClasses = new[] { "page-link" },
        })
    </ul>
</nav>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        $('#deleteSelected').click(function () {
            var selectedRows = $('input[name="selectedRows"]:checked');
            var selectedIds = [];

            selectedRows.each(function () {
                selectedIds.push($(this).val());
            });

            if (selectedIds.length === 0) {
                alert('Please select at least one row.');
                return;
            }

            if (confirm('Are you sure you want to delete the selected rows?')) {
                $.ajax({
                    url: '@Url.Action("DeleteRows", "Admin")',
                    type: 'POST',
                    data: { ids: selectedIds },
                    success: function (result) {
                        if (result.success) {
                            selectedRows.closest('tr').remove();
                        } else {
                            alert('An error occurred while deleting the rows. Please try again.');
                        }
                    },
                    error: function () {
                        alert('An error occurred while deleting the rows. Please try again.');
                    }
                });
            }
        });
    });
</script>
