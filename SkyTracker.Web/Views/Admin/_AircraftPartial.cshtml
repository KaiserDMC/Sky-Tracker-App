@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;
@model X.PagedList.IPagedList<AircraftAllViewModel>

@{
    ViewBag.Title = "Available aircraft";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<p>
    <a href="@Url.Action("Create", "Flight")" class="btn btn-primary">Add Aircraft</a>
    <button id="deleteSelected" class="btn btn-danger">Delete Selected</button>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Aircraft Id</th>
            <th>A/C Registration</th>
            <th>A/C Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model)
        {
            <tr id="row-@item.Id">
                <td>@item.Id</td>
                <td>@item.Registration</td>
                <td>@item.Equipment</td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">

        @Html.PagedListPager(Model, page => {
        if (page == 1)
        return Url.Action("AircraftPartial");
        else
        return Url.Action("AircraftPartial", new { page });
        }, new PagedListRenderOptions {
        DisplayLinkToFirstPage = PagedListDisplayMode.IfNeeded,
        ContainerDivClasses = new[] { "pagination" },
        LiElementClasses = new[] { "page-item" },
        PageClasses = new[] { "page-link" },
        })
    </ul>
</nav>