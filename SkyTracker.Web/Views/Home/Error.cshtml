@model ErrorViewModel

@{
    ViewData["Title"] = "General Error";
}

<br />
<br />
<br />

<h3 class="text-danger text-center mb-2">@ViewBag.Title</h3>
<h5 class="text-danger text-center mb-4">An error occurred while processing your request.</h5>

<div class="text-center mb-2">
<h6>Contact Support</h6>
<p>
    If you need further assistance or have any questions, please don't hesitate to
    <a href="mailto:support@sky-tracker.info?subject=Support%20Request&body=Hello%20Support%2C%0A%0AI'm%20encountering%20an%20issue%20and%20need%20help.%20Please%20find%20the%20details%20below%3A%0A%0A[Describe%20your%20issue%20here]%0A%0AThank%20you%2C%0A[Your%20Name]">
        Contact Support
    </a>.
</p>
</div>

<div class="container-fluid h-100">
    <div class="row h-100">
        <div class="col-12 d-flex align-items-center justify-content-center">
            <div class="col-10 col-sm-6 text-center">
                <div>
                    <img src="~/azure/blob-error/error.jpg" alt="error" class="img-thumbnail" style="max-height: 450px">
                </div>
                <div class="mt-3">
                    <a class="btn btn-secondary btn-lg" asp-controller="Home" asp-action="Index">Home Page</a>
                </div>
            </div>
        </div>
    </div>
</div>