@model EmailChangeModel

@{
    ViewBag.Title = "Change your email address";
}

<h1>@ViewBag.Title</h1>

@if (Model.NewEmail != null)
{
    <div>
        <p>Your current email is: @Model.NewEmail</p>
        <hr />
    </div>
}

<div class="row">
    <div class="col-md-4">
        <form id="emailChangeForm" method="post"> 
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="NewEmail" class="form-control" aria-required="true" />
                <label asp-for="NewEmail"></label>
                <span asp-validation-for="NewEmail" class="text-danger"></span>
            </div>
           
            <button id="emailChangeSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Change Email</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}